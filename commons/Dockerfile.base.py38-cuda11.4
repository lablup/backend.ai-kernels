    tar --no-same-owner --keep-old-files --lzma -xvf nccl_${NCCL}-1+cuda11.4_x86_64.txz -C /usr/local/cuda/lib64/ --strip-components=2 --wildcards '*/lib/libnccl.so.*' && \
