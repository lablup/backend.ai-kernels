{
  "prestart": [
    {
      "action": "run_command",
      "args": {
        "command": [
          "cp",
          "/etc/filebrowser/filebrowser.db",
          "/home/work/filebrowser.db"
        ]
      }
    }
  ],
  "command": [
    "/usr/bin/filebrowser",
    "--noauth",
    "--address", "0.0.0.0",
    "--port", "8080",
    "--database", "/home/work/filebrowser.db"
  ],
  "allowed_arguments": [
    "--root"
  ],
  "default_arguments": {
    "--root": "/home/work"
  }
}
